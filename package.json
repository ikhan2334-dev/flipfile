{
  "name": "fileflip-tools",
  "scripts": {
    "minify-css": "cleancss -o css/style.min.css css/style.css",
    "minify-js": "uglifyjs js/main.js -o js/main.min.js -c -m",
    "minify-html": "html-minifier-terser --collapse-whitespace --remove-comments -o index.min.html index.html",
    "minify-all": "npm run minify-css && npm run minify-js"
  },
  "devDependencies": {
    "clean-css-cli": "^4.3.0",
    "uglify-js": "^3.13.0",
    "html-minifier-terser": "^5.1.1"
  }
}
